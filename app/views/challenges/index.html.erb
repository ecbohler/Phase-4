<div>
  <!-- this is the page that will display a (partial) form to edit a challenge -->
  <% @challenges.each do |challenge| %>
  <%= challenge.title %><br>
  <% end %>
  <br><br><br>
  <div class="element-show" id="<%= @challenges.first.id %>">
    <% challenge = @challenges.first %>
    <p class="show-comments">show comments</p>
    <p class="upvote">upvote</p>
    <p>votes: <%= challenge.votes.count %></p>
    <form class="comments-form">
      <input type='text' name='hashtag'>
      <input type='submit' name='submit' class='comments-submit'>
    </form>
    <span style="display:none;" class="class-name"><%= challenge.class %></span>


  </div>
</div>
