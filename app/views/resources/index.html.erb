<div>

  <form class="search box fl-r" action="/users/<%= current_user.id %>/resources" method="get">
    <label for='Search It'>Search: </label>
    <input type="text" name="search_string"/>
    <input type="submit" value="SEARCH" />
  </form>

<div class="c-hero-challenge"></div>

<h2 class="c-hero-container_pages">RESOURCES</h2>

<div class="c-hero-container-outer">
</div>

  <br>

  <div>
    <% @resources.each do |resource| %>
    <div class="chal-box">

      <img src="http://devbootcamp.com/assets/img/devbootcamp-logo.png"></img><br>

      <div class="user-name">
        <p><%= link_to "#{resource.title}", user_resource_path(id: resource.id) %></p>
      </div><br>

      <div class="user-name">
        <p>Title: <%= resource.title %></p>
      </div><br>

      <div class="user-name">
        <p>created by: <%= User.find(resource.user_id).name %></p><br>
      </div>
      <br>
    </div>
    <% end %>
  </div>
</div>
