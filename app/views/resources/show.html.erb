<section class="c-hero-resources">
<div class="tag-search-form">
  <form class="search box fl-r" action="/users/<%= current_user.id %>/resources" method="get">
    <label for='Search It'>Search: </label>
    <input type="text" name="search_string"/>
    <input type="submit" value="SEARCH" />
  </form>
</div>
  <h2 class="c-hero-container_pages">resources</h2>
  <div class="c-hero-container-outer"></div>

</section>

<div class="asset-render">

  <span style="display: none" class="asset-class-type"><%= @resource.class %></span>
  <span style="display: none" class="asset-class-id"><%= @resource.id %></span>
  <span style="display: none" class="user-id"><%= session[:user_id] %></span>

<!-- CONTENT BOX ALL START -->
   <!-- CONTENT BOX BODY START -->
  <div class = "content-box">
    <!-- VOTES START -->
      <div class="resource-votes fl-r">
         <span>Votes: <%= @resource.votes.count %></span>
         <a href ="/votes" class="asset-create-vote">
          <%= image_tag('thumbs_up.jpg', width:'18') %></a>
      </div>
    <!-- VOTES END -->
    <!-- resource CONTENT START -->
    <div class="content-box-title">
      <%= @resource.title %></div><br />
    <div class="content-box-body">
    <div class="content-titles">Description: </div>
    <div class="content-body">
      <%= @resource.description %></div><br />
    <div class="content-titles">resource url: </div>
    <div class="content-body">
    <%=link_to @resource.url %></div><br />
    <span class="content-titles">Author: </span>
    <span class="content-body">
      <%= @user.name %>
    </span><br /><br />
    <span class="content-titles">Created on: </span>
    <span class="content-body">
      <%= @resource.created_at.strftime("%b %d, %Y") %>
    </span><br /><br />
    <!-- resource CONTENT END -->
    <!-- COMMENTS/SOLUTIONS LINKS START -->
    <div class="content-body">
      <a href="/comments" class="show-comments">View Comments</a> |
      <a href="#">View Solution</a>
    </div>
    <!-- COMMENTS/SOLUTIONS LINKS END -->
    <br />
    <div class="content-body">

    <!-- POST COMMENT BUTTON START -->
        <div class="comment-button">
            <form>
              <input type="submit" class="asset-create-comment" value="Post a comment">
            </form>
        </div>
    <!-- POST COMMENT BUTTON END -->
    <!-- TAG FORM START -->
     <div class="tagit-form">
      <form class="asset-tag-form" action="/tags">
        <span class="content-titles">
          <label for='Tag It'>Tag this: </label>
        </span>
        <input type="text_field" class="tag-field"/>
        <input type="submit" value="Tag It" />
      </form>
    </div>
    <!-- TAG FORM END -->
  </div>
    <!-- CONTENT BOX BODY END -->




</div></div>
<div class="comments-container"></div>
<div class="home-link">
<%= link_to "Resources Home", user_resources_path(@resource.user_id) %>
</div>
<!-- CONTENT BOX ALL END -->
